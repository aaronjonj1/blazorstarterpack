@page "/calculator"

<h1>Calculator</h1>

<p>First number </p>

<input @bind="InputString " />

<br />

<p>Second number </p>

<input @bind="InputString2 " />

<br />

<br />

<button class="btn btn-primary" style="background-color:red" @onclick="DoAddition">Addition</button>
<button class="btn btn-primary" style="background-color:orange" @onclick="DoSubtraction">Subtraction</button>
<button class="btn btn-primary" style="background-color:green" @onclick="DoMultiplication">Multiplication</button>
<button class="btn btn-primary" style="background-color:blue" @onclick="DoDivision">Division</button>

<br />

<p>Output: @OutputString </p>

@code

{
    //Inputs and Outputs

    private string InputString { get; set; }

    private string InputString2 { get; set; }

    private string OutputString { get; set; }

    
    //num 1 is first input and num 2 is second input
    //Addition calculator


    private void DoAddition()

    {

        double num = double.Parse(InputString);
        double num2 = double.Parse(InputString2);

        num = num + num2;

        OutputString = num.ToString();

    }

    //Subtraction calculator

    private void DoSubtraction()

    {

        double num = double.Parse(InputString);
        double num2 = double.Parse(InputString2);

        num = num - num2;

        OutputString = num.ToString();

    }

    //Multiplication calculator

    private void DoMultiplication()

    {

        double num = double.Parse(InputString);
        double num2 = double.Parse(InputString2);

        num = num * num2;

        OutputString = num.ToString();

    }

    //Division calculator

    private void DoDivision()

    {

        double num = double.Parse(InputString);
        double num2 = double.Parse(InputString2);

        num = num / num2;

        OutputString = num.ToString();

    }

}
