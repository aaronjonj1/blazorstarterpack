@page "/coinflip"

<h1>Coin Flip</h1>

<button class="btn btn-primary" style="background-color:orange" @onclick="Random">Flip It</button>

<br />

<p>Output: @OutputString </p>
<img src="@OutputPicture" style="width:300px;height:300px" />

@code {
    /// <summary>
    /// Output the string value
    /// </summary>
    private string OutputString { get; set; } //output string

    /// <summary>
    /// Output the image URL, HTML converts it to picture
    /// </summary>
    private string OutputPicture { get; set; } //output picture

    /// <summary>
    /// Coin Flip Calculator
    /// </summary>

    private void Random()

    {
        ///<summary>
        /// Generate random number
        /// </summary>
        Random rd = new Random();
        ///<summary>
        /// Generate random number, first number is the minimum value, second number is one greater than the maximum value
        /// </summary>
        int randomnumber = rd.Next(1, 3);

        if (randomnumber == 1)
        {
            OutputString = "Heads";
            OutputPicture = "https://www.usmint.gov/wordpress/wp-content/uploads/2020/12/2021-lincoln-penny-uncirculated-obverse-philadelphia-768x768.jpg";
        }
        else if (randomnumber == 2)
        {
            OutputString = "Tails";
            OutputPicture = "https://www.usmint.gov/wordpress/wp-content/uploads/2020/12/2021-lincoln-penny-uncirculated-reverse-768x768.jpg";
        }
    }

}
