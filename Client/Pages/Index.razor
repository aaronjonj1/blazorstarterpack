@page "/"

<h1>Hello everyone, I'm Aaron Jones!</h1>

Welcome to my Blazor App. This is my very own website which has certain features such as a counter, IPO, and a weather forecast.

<SurveyPrompt Title="How is Blazor working for you?" />

<Counter IncrementAmount="10" />

@page "/ipo"

<h1>IPO</h1>

<p>Input prompt </p>

<input @bind="InputString " />

<button class="btn btn-primary" @onclick="DoProcessing">Do it</button>

<p>Output: @OutputString </p>

@code

{

    private string InputString { get; set; }

    private string OutputString { get; set; }

    private void DoProcessing()

    {

        double num = double.Parse(InputString);

        num = num * 2;

        OutputString = num.ToString();

    }

}
