@page "/car"

<h1 style="color:black;">Car</h1>



<br />

<br />

<button class="btn btn-primary" style="background-color:limegreen" @onclick="Toyota">Toyota Camry</button>

<br />

<p>Make: @OutputMake </p>

<p>Model: @OutputModel </p>

<p>Color: @OutputColor </p>

<p>Year: @OutputYear </p>

<p>Price: @OutputPrice </p>

<br />

@code

{

    public class Car
    {
        private string OutputMake { get; set; }

        private string OutputModel { get; set; }

        private string OutputColor { get; set; }

        private string OutputYear { get; set; }

        private string OutputPrice { get; set; }

        string make;

        string model;

        string color;

        int year;

        string price;

        private void CarOutput()
        {
            OutputMake = make.ToString();
            OutputModel = model.ToString();
            OutputColor = color.ToString();
            OutputYear = year.ToString();
            OutputPrice = price.ToString();
        }



        private void Toyota()

        {
            Car Toyota = new Car();

            Toyota.make = "Toyota";

            Toyota.model = "Camry";

            Toyota.color = "Gray";

            Toyota.year = 2010;

            Toyota.price = "$5,650";

            Toyota.CarOutput();



        }
    }
}
