@page "/car"

@inherits carProgram.AllCars 
@{
    //inherits function brings the Car.razor.cs file into the razor file
}

<h1 style="color:black;">Used Car Dealership</h1>
<br />

<button class="btn btn-primary" style="background-color:cornflowerblue" @onclick="Car1">Toyota Camry '10</button>
<button class="btn btn-primary" style="background-color:cornflowerblue" @onclick="Car2">Nissan Altima '04</button>
<button class="btn btn-primary" style="background-color:cornflowerblue" @onclick="Car3">Volkswagen Tiguan '17</button>
<button class="btn btn-primary" style="background-color:cornflowerblue" @onclick="Car4">Kia Rio '15</button>
<button class="btn btn-primary" style="background-color:cornflowerblue" @onclick="Car5">Ford F-150 '13</button>
<button class="btn btn-primary" style="background-color:cornflowerblue" @onclick="Car6">Chrysler PT Cruiser '06</button>
<br />
<button class="btn btn-primary" style="background-color:cornflowerblue" @onclick="Car7">Dodge Charger '19</button>
<button class="btn btn-primary" style="background-color:cornflowerblue" @onclick="Car8">Mitsubishi Mirage '06</button>

<br />
<br />
<p>Make: @OutputMake </p>
<p>Model: @OutputModel </p>
<p>Color: @OutputColor </p>
<p>Year: @OutputYear </p>
<p>Price: @OutputPrice </p>
<p>Mileage: @OutputMileage </p>
<img src="@OutputURL" style="width:375px;height:250px"/>
<p>Additional Notes: @OutputNotes </p>